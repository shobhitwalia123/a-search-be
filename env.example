# Environment variables for the AI Search Engine API
# Copy this file to .env and fill in your actual values

# OpenAI API Key (optional - only needed for AI-powered answers)
# Leave empty to use completely FREE search (no AI answers)
OPENAI_API_KEY=

# Pinecone Configuration
# For local Pinecone (default)
PINECONE_API_KEY=pcsk_4iK7wA_9VQPa8JKnxmpjDekxhHhFCnGxqziv5jJHAVun2MhXrcPejSWcsk4cKFuxaWH7Ci
PINECONE_HOST=https://test-ek0rf6m.svc.aped-4627-b74a.pinecone.io
PINECONE_ENVIRONMENT=us-east-1

# For cloud Pinecone (uncomment and update these instead)
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_HOST=https://your-index-name-your-project.svc.pinecone.io
# PINECONE_ENVIRONMENT=your_pinecone_environment_here

# API Configuration
# Set this to your deployment URL (e.g., https://your-app.vercel.app)
# Leave empty for localhost development
API_BASE_URL=

# Embedding Model Configuration
# Set to "true" to use FREE Hugging Face Inference API (no local model loading)
# Set to "false" to use OpenAI embeddings (requires API key and costs money)
USE_FREE_EMBEDDINGS=true

# Optional: Hugging Face API Token (for authenticated API access)
# Leave empty to use fallback embeddings (still works without API)
# Get free token at: https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=

